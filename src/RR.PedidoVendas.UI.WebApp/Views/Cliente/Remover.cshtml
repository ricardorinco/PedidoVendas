@model RR.PedidoVendas.Application.ViewModels.ClienteViewModel

<h2>@ViewBag.Titulo</h2>
<h4>Tem certeza de que deseja excluir este registro?</h4>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">@Html.DisplayFor(model => model.Nome)</div>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.CPF)</dt>
            <dd>@Html.DisplayFor(model => model.CPF)</dd>
        </dl>
    </div>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Remover" class="btn btn-danger" />
        <a href="@Url.Action("Consultar", "Cliente")" class="btn btn-default">
            <span title="Consulta de Clientes">Voltar</span>
        </a>
    }
</div>