@model RR.PedidoVendas.Application.ViewModels.ProdutoViewModel

<h2>@ViewBag.Titulo</h2>
<h4>Tem certeza de que deseja excluir este registro?</h4>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">@Html.DisplayFor(model => model.Descricao)</div>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Valor)</dt>
            <dd>
                @{
                    var valor = string.Format("{0:C}", Model.Valor);
                    @Html.DisplayFor(model => valor)
                }
            </dd>
        </dl>
    </div>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Remover" class="btn btn-danger" />
        <a href="@Url.Action("Consultar", "Produto")" class="btn btn-default">
            <span title="Consulta de Produtos">Voltar</span>
        </a>
    }
</div>